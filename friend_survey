<body class="bg-gray-100 flex items-center justify-center min-h-screen p-4">

    <div id="app-container" class="w-full max-w-xl bg-white rounded-2xl shadow-xl p-8 transform transition-transform duration-300 ease-in-out">
        <h1 class="text-3xl font-bold text-center text-gray-900 mb-2">Compliment Collector</h1>
        <p class="text-center text-gray-600 mb-8">Share a favorite thing about me!</p>

        <form id="compliment-form" class="space-y-6">
            <div>
                <label for="compliment" class="block text-sm font-medium text-gray-700 mb-1">Your Compliment</label>
                <textarea id="compliment" name="compliment" rows="4" required
                          class="mt-1 block w-full rounded-lg border border-gray-300 shadow-sm p-3 focus:ring-purple-500 focus:border-purple-500 transition-colors duration-200 resize-none"
                          placeholder="Tell me something you love about me..."></textarea>
            </div>
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Your Name (Optional)</label>
                <input type="text" id="name" name="name"
                       class="mt-1 block w-full rounded-lg border border-gray-300 shadow-sm p-3 focus:ring-purple-500 focus:border-purple-500 transition-colors duration-200"
                       placeholder="Enter your name">
            </div>
            <button type="submit"
                    class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-lg font-bold text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors duration-200 transform hover:-translate-y-1">
                Send Compliment
            </button>
        </form>

        <div id="message-container" class="mt-6 text-center text-sm font-medium" style="display: none;"></div>
    </div>

    <script>
        //
        // This is the JavaScript for the web app.
        // It handles the form submission and communicates with the Google Apps Script.
        //

        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('compliment-form');
            const messageContainer = document.getElementById('message-container');
            const appContainer = document.getElementById('app-container');

            // IMPORTANT:
            // 1. You must replace this with your Google Apps Script Web App URL.
            // 2. See the commented code below for what to put in your Google Apps Script file.
            const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbxGL_jzLdKyl7QBwXdyQzsaimL7UPFcV8SrX_YTg9QiQFcxZTfQWExrSjDngD_O64Hf/exec';

            const showMessage = (message, type) => {
                messageContainer.textContent = message;
                messageContainer.className = `mt-6 text-center text-sm font-medium p-4 rounded-lg transition-all duration-300 transform scale-100`;
                if (type === 'success') {
                    messageContainer.classList.add('bg-green-100', 'text-green-800');
                } else if (type === 'error') {
                    messageContainer.classList.add('bg-red-100', 'text-red-800');
                }
                messageContainer.style.display = 'block';
            };

            const hideMessage = () => {
                messageContainer.style.display = 'none';
                messageContainer.textContent = '';
            };

            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                hideMessage();

                const formData = new FormData(form);
                const compliment = formData.get('compliment');
                const name = formData.get('name') || 'Anonymous';

                // Simple validation to ensure the compliment is not empty
                if (!compliment.trim()) {
                    showMessage('Please write a compliment.', 'error');
                    return;
                }

                const payload = {
                    compliment: compliment,
                    name: name
                };

                // The loading state should be shown while fetching
                const submitButton = form.querySelector('button');
                submitButton.disabled = true;
                submitButton.textContent = 'Sending...';

                try {
                    const response = await fetch(SCRIPT_URL, {
                        method: 'POST',
                        body: JSON.stringify(payload),
                        headers: {
                            'Content-Type': 'text/plain;charset=utf-8', // Use text/plain for CORS compatibility with Google Apps Script
                        },
                    });

                    if (response.ok) {
                        const result = await response.json();
                        if (result.status === 'success') {
                            showMessage('Thank you! Your compliment has been recorded.', 'success');
                            form.reset(); // Clear the form
                        } else {
                            showMessage('Something went wrong. Please try again later.', 'error');
                        }
                    } else {
                        showMessage('Failed to send compliment. Please check the URL.', 'error');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    showMessage('An error occurred. Check the console for details.', 'error');
                } finally {
                    submitButton.disabled = false;
                    submitButton.textContent = 'Send Compliment';
                }
            });
        });

        //
        // --- GOOGLE APPS SCRIPT CODE ---
        //
        // This is the code you need to copy and paste into a new Google Apps Script.
        //
        // 1. Go to your Google Sheet.
        // 2. Go to Extensions -> Apps Script.
        // 3. Delete any existing code and paste the code below.
        // 4. Save the script (Ctrl+S or Cmd+S).
        // 5. Click "Deploy" -> "New deployment".
        // 6. Select "Web app" for the type.
        // 7. For "Who has access," choose "Anyone."
        // 8. Click "Deploy" and authorize the script.
        // 9. Copy the Web app URL and paste it into the SCRIPT_URL variable above.
        //
        /*
        function doPost(e) {
          try {
            var data = JSON.parse(e.postData.contents);
            var compliment = data.compliment;
            var name = data.name;

            var sheet = SpreadsheetApp.getActiveSpreadsheet().getActiveSheet();
            var timestamp = new Date();

            // Append the new row to the sheet
            sheet.appendRow([timestamp, name, compliment]);

            return ContentService.createTextOutput(JSON.stringify({ status: 'success' }))
              .setMimeType(ContentService.MimeType.JSON);

          } catch (error) {
            Logger.log(error);
            return ContentService.createTextOutput(JSON.stringify({ status: 'error', message: error.message }))
              .setMimeType(ContentService.MimeType.JSON);
          }
        }
        */
    </script>
</body>
</html>
